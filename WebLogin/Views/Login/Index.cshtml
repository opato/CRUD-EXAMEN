@model WebLogin.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700&subset=latin-ext" />
    <link href="~/css/mypagestyle.css" rel="stylesheet" />
    <link href="~/css/StyleForm.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="row arriba"></div>
        <div class="row justify-content-center">
            <div class="col-8">
                <div id="login-div">
                    @using (Html.BeginForm("Autorizar", "Login", FormMethod.Post))
                    {
                        <div class="form-heading text-center">
                            <div class="title">Log in</div>
                        </div>
                        <div class="row msgerror">
                            @Html.DisplayFor(model => model.MensajeDeError)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Usuario1)
                                <input class="text-box single-line" data-val="true" data-val-required="Usuario requerido" id="Usuario1" name="Usuario1" type="text" value="">
                            </div>
                        </div>
                        <div class="row msgerror">
                            <span class="field-validation-error" data-valmsg-for="Usuario1" data-valmsg-replace="true"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Password)
                                <input class="text-box single-line password" data-val="true" data-val-required="Contraseña requerida" id="Password" name="Password" type="password" value="">
                            </div>
                        </div>
                        <div class="row msgerror">
                            <span class="field-validation-error" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label><a href="#">Olvidaste tu Password?</a></label>
                            </div>
                            <div class="col-md-6">
                                <button class="adam-button" type="submit">LOGIN</button>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/formscript.js"></script>
</body>
</html>
