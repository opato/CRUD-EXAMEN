@model WebLogin.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
    <link href="~/css/StyleForm.css" rel="stylesheet" />
    <link href="~/css/mypagestyle.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-heading text-center">
                        <div class="title">Editar Usuario</div>
                    </div>
                    <div class="form-horizontal">
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "label-active" })
                                @Html.EditorFor(model => model.Correo)
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.Correo)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Usuario1, htmlAttributes: new { @class = "label-active" })
                                @Html.EditorFor(model => model.Usuario1)
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.Usuario1)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "label-active" })
                                @Html.EditorFor(model => model.Password)
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.ConfirmaPassword, htmlAttributes: new { @class = "label-active" })
                                @Html.EditorFor(model => model.ConfirmaPassword)
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.ConfirmaPassword)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.Sexo, new SelectList(
                                                  new List<Object>{
                                                       new { value = "M" , text = "Masculino"  },
                                                       new { value = "F" , text = "Femenino"}
                                                    },
                                                  "value",
                                                  "text",
                                                   2),new { @class="form-control" })
                                <div class="espacio"></div>
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.Sexo)
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-9 col-sm-8">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                            <div class="col-6 col-md-3 col-sm-4">
                                @Html.ActionLink("Regresar", "Index", null, htmlAttributes: new { @class = "btn btn-success" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/formscript.js"></script>
</body>
</html>
