@model WebLogin.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar usuario</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/css/StyleForm.css" rel="stylesheet" />
    <link href="~/css/mypagestyle.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-heading text-center">
                        <div class="title">Nuevo Usuario</div>
                    </div>
                    <div class="form-horizontal">
                        <div class="row msgerror">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Correo)
                                @Html.EditorFor(model => model.Correo)
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.Correo)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Usuario1)
                                @Html.EditorFor(model => model.Usuario1)
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.Usuario1)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Password)
                                @Html.EditorFor(model => model.Password)
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.ConfirmaPassword)
                                @Html.EditorFor(model => model.ConfirmaPassword)
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.ConfirmaPassword)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <select class="form-control" data-val="true" data-val-required="Estatus requerido" id="Estatus" name="Estatus">
                                    <option disabled="" selected="">Estatus</option>
                                    <option value="true">Activo</option>
                                    <option value="false">Inactivo</option>
                                </select>
                                <div class="espacio"></div>
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.Estatus)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <select class="form-control" data-val="true" data-val-required="Sexo requerido" id="Sexo" name="Sexo">
                                    <option disabled="" selected="">Sexo</option>
                                    <option value="M">Masculino</option>
                                    <option value="F">Femenino</option>
                                </select>
                                <div class="espacio"></div>
                            </div>
                        </div>
                        <div class="row msgerror">
                            @Html.ValidationMessageFor(model => model.Sexo)
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-9 col-sm-8 col-lg-9">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                            <div class="col-6 col-md-3 col-sm-4 col-lg-3">
                                @Html.ActionLink("Regresar", "Index", null, htmlAttributes: new { @class = "btn btn-success" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/formscript.js"></script>

</body>
</html>
